    <!-- App Css-->
    <link href="~/assets/css/app.min.css" rel="stylesheet" />
    <link href="~/assets/css/responsive.css" rel="stylesheet" />
    <script src="~/assets/js/jquery-3.6.0.min.js"></script>
    <style>
        .Highlighted {
            background-color: #FFD700 !important; /* Gold color */
            color: black !important;
        }

        .login-img {
            background-image: url('./assets/images/p3.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 90vh;
        }
        
    </style>
</head>
<body class="login-img">

    <!--toastr-->
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    @*  "toast-top-right": Top - right corner(default )
    "toast-top-left": Top - left corner
    "toast-bottom-right": Bottom - right corner
    "toast-bottom-left": Bottom - left corner
    "toast-top-center": Centered at the top
    "toast-bottom-center": Centered at the bottom
    "toast-top-full-width": Full - width at the top
    "toast-bottom-full-width": Full - width at the bottom
    toastr.success(resdata.Msg);
    toastr.error(resdata.Msg);
    toastr.warning(resdata.Msg); *@
    <section >
        <div class="container-fluid">
            <div>
                @RenderBody()
            </div>
        </div>
    </section>
    @* <div class="login-img">
        @RenderBody()
    </div> *@
