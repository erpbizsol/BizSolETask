@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/assets/script/changepassword.js"></script>
<style>
    .tabs {
        width: 100%;
        max-width: 2000px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        overflow: hidden;
        padding: 0.7rem;
    }
</style>

<div class="container">
    <div id="txtCreatepage">
        <div class="card shadow-sm">
            <div class="tabs">
                <div class="row p-1">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-3  col-sm-6">
                                <label for="txtExistingPassword" class="col-form-label-sm fw-bold">
                                    Existing Password <span class="text-danger">*</span>
                                </label>
                                <input type="text" id="txtExistingPassword" name="txtExistingPassword" autocomplete="off" class="form-control form-control-sm box_border" placeholder="Existing Password" maxlength="15">
                                <input type="hidden" id="hftxtCode" value="0" />
                            </div>
                            <div class="col-md-3  col-sm-6">
                                <label for="txtNewPassword" class="col-form-label-sm fw-bold">
                                   New Password <span class="text-danger">*</span>
                                </label>
                                <input type="text" id="txtNewPassword" name="txtNewPassword" autocomplete="off" class="form-control form-control-sm box_border" placeholder="New Password" maxlength="15">
                            </div>
                            <div class="col-md-3  col-sm-6">
                                <label for="txtConfirmNewPassword" class="col-form-label-sm fw-bold">
                                    Confirm New Password <span class="text-danger">*</span>
                                </label>
                                <input type="text" id="txtConfirmNewPassword" name="txtConfirmNewPassword" autocomplete="off" class="form-control form-control-sm box_border" placeholder="Confirm New Password" maxlength="15">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-12 text-right">
                                <input type="button" class="btn btn-primary btn-height" id="btnSave" value="Change Password" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



