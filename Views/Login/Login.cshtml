@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/assets/script/login.js"></script>

<title>Login ESMS</title>
<style>
.login-containers {
    color: #ef6c00;
    padding: 10px 10px;
    border-radius: 10px;
    box-shadow: 0 0 11px 1px #999999;
    max-width: 480px;
    margin: 0 auto;
    margin-top: 2rem;
    font-size:15px;
}

#btnValidateCompany, #btnProceed {
    width: 100%;
}

.Esms-logo {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    position: relative;
    bottom: 4rem;
    border: 1px solid #e0e4e8;
}

.Esms-login-logo {
    height: 50px;
}

.login-form-text {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
    font-size: 1rem !important;
    font-weight: 400 !important;
}

.login-test-field {
    padding: 4px .75rem 0.59rem .75rem;
    margin-bottom:20px;
}

</style>

<div class="login-containers card">
    <div class="modal-header">
        <h4 class="modal-title center text-bold">
            <img style="height: 40px; vertical-align: bottom" src="~/assets/images/bizsol-logo-small.gif" />
            <font style="font-size: xx-large; line-height: 1.3;"><span style="color: #ef6c00;">B</span><span style="color: #569252;">iz</span><span style="color: #ef6c00;">S</span><span style="color: #569252;">o</span><span style="color: #ef6c00;">l</span> </font>
            <span style="color: #ef6c00;">E-Task</span>
        </h4>
        <span class="text-right" style="color: #ef6c00;"><i class="fa fa-lock fa-2x" aria-hidden="true"></i></span>
    </div>
    <hr />
    <form>
        <div id="dvLogin">
            <div class="mt-2">
                <label for="txtCompanyCode" class="form-label login-form-text">User Login</label>
                <input id="txtCompanyCode" name="CompanyCode" class="login-test-field form-control login-form-text" placeholder="Enter Company Code" type="text" required autocomplete="off">
            </div>
            <div>
                <div class="mt-2" id="txtU">
                    <input id="txtUserID" name="UserID" class="login-test-field form-control login-form-text" placeholder="Enter User ID" type="text" required autocomplete="off">
                </div>
                <div class="mt-2" id="txtP">
                    <input id="txtPassword" name="Password" class="login-test-field form-control login-form-text" placeholder="Enter Password" autocomplete="off" type="password" required>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <input type="checkbox" id="chkIsRememberMe" checked="checked"/>
                        Remember Me ?
                    </div>
                </div>
                <input type="button" class="login-test-field btn btn-primary login-form-text mt-3" id="btnProceed" value="Login" />
            </div>
            <div class="row">
                <div class="col-sm-12 text-right" style="margin-top: 1.4rem; font-size: 0.8rem;">
                    <a><span id="forgotpassword" style="cursor: pointer; color: #f58220;">Forgot Password ?</span></a>
                </div>
            </div>
        </div>
        <div id="dvForgetPassword" style="display:none">
            <div class="mt-2">
                <label for="txtForgetCompanyCode" class="form-label login-form-text">User Login</label>
                <input id="txtForgetCompanyCode" name="CompanyCode" class="login-test-field form-control login-form-text" placeholder="Enter Company Code" type="text" required autocomplete="off">
            </div>
                <div class="mt-2" id="txtU">
                <input id="txtForgetUserID" name="UserID" class="login-test-field form-control login-form-text" placeholder="Enter User ID" type="text" required autocomplete="off">
                </div>
                <div class="row">
                    <div class="col-sm-8 mt-1">
                        <span style="color:blue;font-size:12px;cursor:pointer;" id="btnBack">GO TO BACK ?</span>
                    </div>
                <div class="col-sm-4">
                    <input type="button" class="login-test-field btn btn-primary login-form-text" id="btnGetOtp" value="GET OTP" />
                </div>
                </div>
            </div>
    </form>
</div>





