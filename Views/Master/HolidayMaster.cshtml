
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
<link href="~/assets/css/filter.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<script src="~/assets/js/xlsx.full.min.js"></script>
<style>
    .tabs {
        width: 100%;
        max-width: 2000px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        overflow: hidden;
        padding: 0.7rem;
    }
    .datepicker td, .datepicker th {
        border-radius: 20px !important;
    }

    .datepicker table tr td, .datepicker table tr td {
        padding: 8px 9px !important;
        height: 16px !important;
    }


    .datepicker table tfoot {
        display: none;
    }

</style>
<div class="container">
    <div class="mt-1 sm-table" id="txtListpage">
        <div class="row">
            <div class="col-sm-12 text-end">
                <label></label>
                <button type="button" class="btn btn-primary  btn1 btn-height" title="CREATE NEW" onclick="CreateHolidayMaster()">CREATE NEW</button>
            </div>
        </div>
        <div class="card-body mt-2" id="txtStatusTable">
            <div class="table-wrapper fixed-height-table">
                <table id="table" class="fixed-width-table table">
                    <thead id="table-header">
                    </thead>
                    <tbody id="table-body">
                    </tbody>
                </table>
            </div>
            <!-- Paginator -->
            <div class="paginator" id="paginator-table">
            </div>
        </div>
    </div>
    <div id="txtCreatepage" style="display:none;">
        <div class="card shadow-sm">
            <div class="tabs">
                <div class="row p-1">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-3 col-sm-6">
                                <label for="txtVacation" class="col-form-label-sm fw-bold">Vacation </label><span class="text-danger">*</span>
                                <input type="hidden" id="hfCode" value="0">
                                <input type="text" id="txtVacation" class=" box_border form-control form-control-sm" autocomplete="off" maxlength="50" placeholder="Vacation...">
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <label for="txtDate" class="col-form-label-sm fw-bold">Date</label> <span class="text-danger">*</span>
                                <input type="text" id="txtDate" class="box_border form-control form-control-sm" autocomplete="off" placeholder="Date..">
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-12 col-12 text-right">
                                <input type="button" class="btn btn-danger btn-height" onclick="BackMaster();" value="Back" />
                                <input type="button" class="btn btn-primary btn-height btn1" id="btnSave" onclick="Save()" value="Save" />
                            </div>
                        </div>
                    </div>
                </div>
           
            </div>
        </div>

    </div>
</div>
<script src="~/assets/js/filter.js"></script>
<script src="~/assets/script/holidaymaster.js"></script>
