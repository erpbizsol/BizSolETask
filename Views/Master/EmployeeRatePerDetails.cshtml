@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
<link href="~/assets/css/filter.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<script src="~/assets/script/employeerateperdetails.js"></script>
<style>
    .datepicker td, .datepicker th {
        border-radius: 20px !important;
    }

    .datepicker table tr td, .datepicker table tr td {
        padding: 8px 9px !important;
        height: 16px !important;
    }

    .datepicker table tfoot {
        display: none;
    }

    .tabs {
        width: 100%;
        max-width: 2000px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        overflow: hidden;
        padding: 0.7rem;
    }

    /* .datepicker {
        top: 225.078px !important;
        left: 303.781px;
        z-index: 10;
        display: block;
    } */

    .datepicker .active{
        background: #46cfc8;
        color: white;
    }

    th {
        background-color: #fff;
        color: #212529;
    }

    .ssm-table {
        width: 114% !important;
        max-width: 474.234px !important;
    }
</style>
<div class="container">
    <div id="txtCreatepage">
        <div class="card shadow-sm">
            <div class="tabs">
                <div class="row p-1">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-3 col-sm-6">
                                <label for="ddlEmployeeName" class="col-form-label-sm fw-bold">Employee Name :</label>
                                    <select id="ddlEmployeeName" class="form-control form-control-sm box_border" onchange="GetEmployeeRateDetails(this)">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row p-1 ssm-table" id="divOrderBooking mb-2">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-wrapper" style="overflow: auto;">
                                <table id="table" class="table">
                                    <thead id="table-header">
                                
                                </thead>
                                <tbody id="table-body"></tbody>
                               
                                </table>
                            </div>
                            <div class="paginator" id="paginator-table">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/js/filter.js"></script>

