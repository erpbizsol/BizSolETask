<div id="txtCreatepage">
    <div class="card shadow-sm">
        <div class="tabs">
            <div class="row p-2">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-3 col-sm-6 col-6">
                            <label for="txtFromDate" class="col-form-label-sm fw-bold">From Date</label>
                            <input type="text" id="txtFromDate" name="txtFromDate" autocomplete="off" class="form-control form-control-sm box_border" placeholder="From Date.." maxlength="15">
                        </div>
                        <div class="col-md-3 col-sm-6 col-6">
                            <label for="txtToDate" class="col-form-label-sm fw-bold">To Date</label>
                            <input type="text" id="txtToDate" name="txtToDate" autocomplete="off" class="form-control form-control-sm box_border" placeholder="To Date.." maxlength="15">
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <label for="ddlEmployeeName" class="col-form-label-sm fw-bold">Employee Name</label>
                            <select id="ddlEmployeeName" multiple autocomplete="off" class="form-control form-control-sm box_border" placeholder="Select Employee Name..">
                            </select>
                        </div>
                       
                        <div class="col-md-3  col-sm-6 dropdown-container">

                            <label for="SddlWorkType" class="col-form-label-sm fw-bold">
                                Work Type <span class="text-danger"></span>
                            </label>
                            <div style="position: relative;">
                                <input type="text" id="SddlWorkType" readonly class="form-control form-control-sm box_border select-checkbox-multis" placeholder="Select Work Type">
                            </div>
                            <div class="dropdown-list" id="ddlWorkType">
                                <label><input type="checkbox" id="selectAll"> Select All</label><br>
                                <div id="checkboxOptions"></div>
                            </div>
                        </div>
