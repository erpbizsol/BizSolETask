@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<link href="~/assets/css/filter.css" rel="stylesheet" />
<script src="~/assets/js/xlsx.full.min.js"></script>
<script src="~/assets/js/blockui.js"></script>

<style>
    @@media (max-width: 576px) .status-select {
        font-size: 12px; /* text chhota */
        height: 32px; /* box height chhoti */
        padding: 4px 8px;
    }

    .select2-container--default .select2-selection--single {
        font-size: 12px;
        height: 32px;
    }

    .select2-container--default .select2-selection--single .select2-selection__rendered {
        line-height: 30px;
    }

    .select2-container--default .select2-selection--single .select2-selection__arrow {
        height: 30px;
    }

    .select2-dropdown {
        font-size: 12px;
    }

    .datepicker table tr td, .datepicker table tr td {
        padding: 8px 9px !important;
        height: 16px !important;
        border-radius: 20px;
    }

    .datepicker thead, th {
        background-color: #032954;
        color: white;
        border: 2px solid #ddd;
    }

    .datepicker table tfoot {
        display: none;
    }

    .active {
        background-color: #0ba4af;
        color: #fff;
    }

    .datepicker {
        top: 157.766px !important;
        left: 262px;
        z-index: 10;
        display: block;
    }

    .tabs {
        width: 100%;
        max-width: 2000px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        overflow: hidden;
        padding: 0.7rem;
    }

    label {
        font-weight: bold;
        margin-right: 8px;
    }

    select, input {
        /* margin-bottom: 6px; */
        padding: 4px 8px;
    }


    #txtTable tbody tr:hover {
        background: #f6fafc;
    }

    /* Inputs/selects inside grid cells */
    #txtTable .assigned-ddl,
    #txtTable .reason-ddl,
    #txtTable .plan-date-input,
    #txtTable .priority-input {
        width: 100%;
        box-sizing: border-box;
        height: 32px;
        padding: 4px 8px;
    }

    /* Column widths – keep data readable */
    /* UID */
    #txtTable thead th:nth-child(1) {
        width: 80px;
    }

    #txtTable thead th:nth-child(2) {
        width: 15px;
    }

    #txtTable thead th:nth-child(3) {
        width: 55px;
    }

    #txtTable thead th:nth-child(4) {
        width: 120px;
    }

    #txtTable thead th:nth-child(5) {
        width: 705px;
    }

    #txtTable thead th:nth-child(6) { /* Reason */
        width: 320px;
    }

    #txtTable thead th:nth-child(7) {
        width: 389px;
    }

    #txtTable thead th:nth-child(8) {
        width: 253px;
    }

    #txtTable thead th:nth-child(9) {
        width: 153px;
    }
    /* Align numeric cells */
    #txtTable td:nth-child(8),
    #txtTable td:nth-child(10) {
        text-align: right;
    }

    /* Select2 width (if used for Assigned) */
    #txtTable .assigned-ddl + .select2 {
        width: 100% !important;
    }

    .modal {
        position: fixed;
        z-index: 999;
        background: rgba(0,0,0,0.4);
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        justify-content: center;
        align-items: center;
        display: flex;
    }

    .modal-content {
        background: #fff;
        padding: 20px;
        width: 500px;
        border-radius: 8px;
    }

    .time-link {
        color: #0d6efd;
        text-decoration: underline;
        cursor: pointer;
    }

    .row-highlight {
        background-color: #d4edda !important; /* Light green */
    }

    .row-pending {
        background-color: #ffff0094 !important; /* Light yellow */
    }

    .row-pending1 {
        background-color: #4ba6ef !important;
    }
    /* Mobile/table scroll: keep header visible and enable scroll */
    .table-wrapper.fixed-height-table1 {
        -webkit-overflow-scrolling: touch;
    }
    /* Sticky table header inside the scroll container */
    table.fixed-height-table1 thead th {
        position: sticky;
        top: 0;
        background-image: linear-gradient(#032954, #032954);
        z-index: 2;
    }
</style>
<div class="container">
    <div id="attachmentModal1" class="modal" style="display:none;">
        <div class="modal-content">
            <h3>Activity  Details:</h3>

            <div id="attachmentContainer1" style="margin-top: 20px;"></div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="table-wrapper">
                        <table id="table" class="table">
                            <thead id="table-header1">
                            <th>Worked By</th>
                            <th>Work Date</th>
                            <th>Time (Minutes)</th>
                            <th>Remarks</th>
                            </thead>
                            <tbody id="table-body1"></tbody>
                        </table>
                    </div>
                    @* <div class="paginator" id="paginator-table">
                </div> *@
                </div>
            </div>
            <div style="margin-top: 30px;">
                <button class="btn btn-secondary" onclick="$('#attachmentModal1').hide()">Close</button>
            </div>

        </div>
    </div>
    <div id="txtCreatepage">
        <div class="card shadow-sm">
            <div class="tabs" id="txtpage" style="display:none">
                <div class="row p-2">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-3 col-sm-6" id="txthide1">
                                <input type="hidden" id="hftxtCode" value="0" />
                                <label for="txtStatus" class="col-form-label-sm fw-bold">Status</label>
                                <select id="txtStatus" name="txtStatus" autocomplete="off" class="form-control form-control-sm box_border" placeholder="Status..." maxlength="10">
                                    <option value="0">Please Select</option>
                                </select>
                            </div>
                            <div class="col-md-3 col-sm-6" style="display:none" id="txtTotalResolutionM1">
                                <label for="txtTotalResolutionM" class="col-form-label-sm fw-bold"> Resolution Time (minutes) </label>
                                <input type="text" id="txtTotalResolutionM" name="txtTotalResolutionM" autocomplete="off" class="Number form-control form-control-sm box_border" placeholder="Total Resolution..." maxlength="10">
                            </div>
                            <div class="col-md-3 col-sm-6" style="display:none" id="txtResolutionDate">
                                <label for="txtResolutionDates" class="col-form-label-sm fw-bold">Resolution Date</label>
                                <input type="text" id="txtResolutionDates" name="txtResolutionDates" autocomplete="off" class="form-control form-control-sm box_border" placeholder="Resolution Date.." maxlength="15">
                            </div>
                            <div class="col-md-3 col-sm-6" style="display:none" id="txtReAssign1">
                                <label for="txtReAssign" class="col-form-label-sm fw-bold">Re-Assign</label>
                                <select id="txtReAssign" name="txtReAssign" autocomplete="off" class="form-control form-control-sm box_border" placeholder="Re-Assign..." maxlength="10">
                                </select>
                            </div>
                            <div class="col-md-3 col-sm-6" style="display:none" id="txtResolvedBy1">
                                <label for="txtResolvedBy" class="col-form-label-sm fw-bold">Resolved By </label>
                                <select id="txtResolvedBy" name="txtResolvedBy" autocomplete="off" class="form-control form-control-sm box_border" placeholder="Resolved By..." maxlength="10">
                                </select>
                            </div>
                            <div class="col-md-3 col-sm-6" style="display:none" id="txtUpdateBy1">
                                <label for="txtUpdateBy" class="col-form-label-sm fw-bold">Update By</label>
                                <select id="txtUpdateBy" class="form-control form-control-sm box_border" autocomplete="off">
                                    <option value="0">Please Select</option>
                                    <option value="1">Yes</option>
                                    <option value="2">No</option>
                                </select>
                            </div>
                            <div class="col-md-3 col-sm-6" style="display:none" id="txtReason1">
                                <label for="txtReason" class="col-form-label-sm fw-bold">Reason</label>
                                <select id="txtReason" class="form-control form-control-sm box_border" autocomplete="off" placeholder="Reason..." maxlength="10">
                                </select>
                            </div>
                            <div class="col-md-3 col-sm-6" style="display:none" id="txtAttachment1">
                                <label for="txtAttachment" class="col-form-label-sm fw-bold">Attachment</label>
                                <input type="file" id="txtAttachment" name="txtAttachment" autocomplete="off" class="form-control form-control-sm box_border" accept=".jpg, .png, .jpeg" multiple>
                            </div>
                            <div class="col-md-4 col-sm-6" id="txthide1">
                                <label for="txtRemarks" class="col-form-label-sm fw-bold">Remarks</label>
                                <input type="text" id="txtRemarks" name="txtRemarks" autocomplete="off" class="form-control form-control-sm box_border" placeholder="Remarks.." maxlength="500">
                            </div>
                            <div class="col-md-3 col-sm-6" style="margin-top: 30px;" id="txthide">
                                <button type="button" class="btn btn-success btn-height" title="UPDATE" onclick="Save()">UPDATE</button>
                                <button type="button" class="btn btn-danger btn-height" id="txtBack" title="Back" style="background:#c75c26">Back</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tabs">
                <div class="row p-1">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-3 col-sm-3">
                                <input type="hidden" id="hftxtCode" value="0" />
                                <label for="ddlEmployeeName" class="col-form-label-sm fw-bold">Employee Name</label>
                                <select id="ddlEmployeeName" class="form-control form-control-sm box_border">
                                </select>
                            </div>
                            <div class="col-md-3  col-sm-3">
                                <label for="txtdate" class="col-form-label-sm fw-bold">
                                    Week Date <span class="text-danger"></span>
                                </label>
                                <input type="date" id="txtdate" class="form-control form-control-sm box_border" maxlength="7" autocomplete="off">
                                <div id="weekInfo" style="font-size:12px;color:#6c757d;margin-top:4px;"></div>
                            </div>
                            <div class="col-md-2  col-sm-2">
                                <label for="yearSelect" class="col-form-label-sm fw-bold">
                                    Year<span class="text-danger"></span>
                                </label>
                                <select id="yearSelect" class="form-control form-control-sm box_border"></select>
                            </div>
                            <div class="col-md-2  col-sm-2">
                                <label for="weekNumber" class="col-form-label-sm fw-bold">
                                    Week No<span class="text-danger"></span>
                                </label>
                                <input type="text" id="weekNumber" class="form-control form-control-sm box_border" maxlength="7" autocomplete="off">
                                <div id="weekInfo" style="font-size:12px;color:#6c757d;margin-top:4px;"></div>
                            </div>

                            <div class="col-md-2  col-sm-2">
                                <label for="" class="col-form-label-sm fw-bold">
                                </label>
                                <input type="button" class=" btn btn-primary btn-height btn1" id="btnSave" value="Show" style="margin-top: 35px;" />

                            </div>

                        </div>

                    </div>
                </div>
                
            </div>
            <div class="">
                <div class="card-body mt-2" id="txtTable">
                    <div class="table-wrapper" style="overflow: auto;">
                        <table id="table" class="fixed-height-table1 table">
                            <thead id="table-header">
                            </thead>
                            <tbody id="table-body">
                            </tbody>
                        </table>
                    </div>
                    <div class="paginator" id="paginator-table">
                    </div>
                </div>
            </div>
        </div>
      
    </div>
</div>

<script src="~/assets/js/filter.js"></script>
<script src="~/assets/script/ticketsplanning.js"></script>

 