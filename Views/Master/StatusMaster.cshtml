@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
<link href="~/assets/css/filter.css" rel="stylesheet" />
<script src="~/assets/script/StatusMaster.js"></script>
<script src="~/assets/js/xlsx.full.min.js"></script>
<style>
    .tabs {
        width: 100%;
        max-width: 2000px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        overflow: hidden;
        padding: 0.7rem;
    }
</style>
<div class="container">
    <div class="mt-1 sm-table" id="txtListpage">
        <div class="row">
            <div class="col-sm-12 text-end">
                <label></label>
                <button type="button" class="btn btn-primary btn-height" title="CREATE NEW" onclick="Create()">CREATE NEW</button>
            </div>
        </div>
        <div class="card-body mt-2" id="txtStatusTable">
            <div class="table-wrapper fixed-height-table">
                <table id="table" class="fixed-width-table table">
                    <thead id="table-header">
                    </thead>
                    <tbody id="table-body">
                    </tbody>
                </table>
            </div>
            <!-- Paginator -->
            <div class="paginator" id="paginator-table">
            </div>
        </div>
    </div>
    <div id="txtCreatepage" style="display:none;">
        <div class="card shadow-sm">
            <div class="tabs">
                <div class="row p-1">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-3  col-sm-6">
                                <label for="txtStatusName" class="col-form-label-sm fw-bold">
                                    Status Sort Name <span class="text-danger">*</span>
                                </label>
                                <input type="text" id="txtStatusName" name="txtStatusName" autocomplete="off" class="form-control form-control-sm box_border" placeholder="Enter Status Sort Name.." maxlength="1">
                                <input type="hidden" id="hfCode" class="form-control form-control-sm box_border"  value="0" maxlength="10">
                            </div>
                            <div class="col-md-3  col-sm-6">
                                <label for="txtStatusDescription" class="col-form-label-sm fw-bold">
                                    Status Description <span class="text-danger">*</span>
                                </label>
                                <input type="text" id="txtStatusDescription" name="txtStatusDescription" autocomplete="off" class="form-control form-control-sm box_border" placeholder="Enter Status Description.." maxlength="50">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-12 text-right">
                                <input type="button" class="btn btn-danger btn-height" onclick="Back();" value="Back" />
                                <input type="button" class="btn btn-primary btn-height" id="btnSave" value="Save" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-2" id="dvExcel" style="display:none">
                    <div class="tabs">
                        <div class="row p-1">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-4  col-sm-6">
                                        <a herf="#" style="color:blue;cursor:pointer;" onclick="GetExcelTemplate('N')">Download Excel Template</a><br />
                                        <a herf="#" style="color:blue;cursor:pointer;" onclick="GetExcelTemplate('Y')">Download Excel Template Sample</a>
                                    </div>
                                    <div class="col-md-4  col-sm-6">
                                        <input type="file" id="txtExcelFile" name="txtExcelFile" autocomplete="off" class="form-control form-control-sm box_border" accept=".xlsx, .xls">
                                    </div>
                                    <div class="col-md-4 col-sm-6 ">
                                        <input type="button" class="btn btn-primary btn-height" id="btnUpload" value="Upload Excel" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<script src="~/assets/js/filter.js"></script>



