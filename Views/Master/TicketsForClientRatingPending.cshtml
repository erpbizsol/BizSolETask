@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<link href="~/assets/css/filter.css" rel="stylesheet" />
<script src="~/assets/js/xlsx.full.min.js"></script>
<script src="~/assets/js/blockui.js"></script>

<style>
    @@media (max-width: 576px) .status-select {
        font-size: 12px;
        height: 32px;
        padding: 4px 8px;
    }

    .tabs {
        width: 100%;
        max-width: 2000px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        overflow: hidden;
        padding: 0.7rem;
    }

    label {
        font-weight: bold;
        margin-right: 8px;
    }

    select, input {
        padding: 4px 8px;
    }

    .modal {
        position: fixed;
        z-index: 999;
        background: rgba(0,0,0,0.4);
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        justify-content: center;
        align-items: center;
        display: flex;
    }

    .modal-content {
        background: #fff;
        padding: 20px;
        width: 500px;
        border-radius: 8px;
    }

    .time-link {
        color: #0d6efd;
        text-decoration: underline;
        cursor: pointer;
    }

    .row-highlight {
        background-color: #d4edda !important;
    }

    .row-pending {
        background-color: #ffff0094 !important;
    }

    .row-pending1 {
        background-color: #4ba6ef !important;
    }

    .table-wrapper.fixed-height-table1 {
        -webkit-overflow-scrolling: touch;
    }
 
    table.fixed-height-table1 thead th {
        position: sticky;
        top: 0;
        background-image: linear-gradient(#032954, #032954);
        z-index: 2;
    }
</style>
<div class="container">
    <div id="attachmentModal1" class="modal" style="display:none;">
        <div class="modal-content">
            <h3>Edit:</h3>
            <div id="attachmentContainer1"></div>
            <div class="tabs">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <label for="txtEmail" class=" col-form-label-sm fw-bold"><span>Email</span></label>
                            <input type="text" id="txtEmail" name="txtEmail" autocomplete="off" class="form-control form-control-sm box_border" maxlength="100">
                        </div>
                    </div>
                </div>
            </div>
            <div style="margin-top: 30px;">
                <button class="btn btn-success" title="Save" onclick="Save()">SendEmail</button>
                <button class="btn btn-secondary" onclick="$('#attachmentModal1').hide()">Close</button>
            </div>
        </div>
    </div>
    <div id="txtCreatepage">
        <div class="card shadow-sm">
            <div class="tabs" id="txtpage">
                <div class="row p-2">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-3 col-sm-6" style="margin-top:-10px;">
                                <label for="txtSerch" class=" col-form-label-sm fw-bold"><span>Search</span></label>
                                <input type="text" id="txtSerch" name="txtSerch" autocomplete="off" onkeydown="filterTickets(this.value)" class="form-control form-control-sm box_border" maxlength="100">
                            </div>
                            <div class="col-md-3 col-sm-6" style="margin-top: 30px;" id="txthide">
                                <button type="button" class="btn btn-success btn-height" title="SendEmail" onclick="SendEmail()">SendEmail</button>
                            </div>
                        </div> 
                    </div>
                </div>
            </div>
          
            <div class="">
                <div class="card-body mt-2" id="txtTable">
                    <div class="table-wrapper" style="overflow: auto;">
                        <table id="table" class="fixed-height-table1 table">
                            <thead id="table-header">
                            </thead>
                            <tbody id="table-body">
                            </tbody>
                        </table>
                    </div>
                    <div class="paginator" id="paginator-table">
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="~/assets/js/filter.js"></script>
<script src="~/assets/script/ticketsforclientratingpending.js"></script>

