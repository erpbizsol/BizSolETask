@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
<link href="~/assets/css/filter.css" rel="stylesheet" />
<script src="~/assets/script/TaskNatureMaster.js"></script>
<script src="~/assets/js/xlsx.full.min.js"></script>
<style>
    .tabs {
        width: 100%;
        max-width: 2000px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        overflow: hidden;
        padding: 0.7rem;
    }
</style>
<div class="container">
    <div class="mt-1 sm-table" id="txtListpage">
        <div class="row">
            <div class="col-sm-12 text-end">
                <label></label>
                <button type="button" class="btn btn-primary btn-height btn1" title="CREATE NEW" onclick="Create()">CREATE NEW</button>
            </div>
        </div>
        <div class="card-body mt-2" id="txtNatureTable">
            <div class="table-wrapper fixed-height-table">
                <table id="table" class="fixed-width-table table">
                    <thead id="table-header">
                    </thead>
                    <tbody id="table-body">
                    </tbody>
                </table>
            </div>
            <div class="paginator" id="paginator-table">
            </div>
        </div>
    </div>
    <div id="txtCreatepage" style="display:none;">
        <div class="card shadow-sm">
            <div class="tabs">
                <div class="row p-1">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-3 col-sm-6">
                                <label for="txtNature" class="col-form-label-sm fw-bold">
                                    Nature <span class="text-danger">*</span>
                                </label>
                                <input type="text" id="txtNature" name="txtNature" autocomplete="off" class="form-control form-control-sm box_border" placeholder="Enter Nature.." maxlength="50">
                                <input type="hidden" id="hfCode" class="form-control form-control-sm box_border" value="0" maxlength="10">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-12 text-right">
                                <input type="button" class="btn btn-danger btn-height" onclick="Back();" value="Back" />
                                <input type="button" class="btn btn-primary btn-height btn1" id="btnSave" value="Save" />
                            </div>
                        </div>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
</div>
<script src="~/assets/js/filter.js"></script>