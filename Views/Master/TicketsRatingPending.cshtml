@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
<link href="~/assets/css/filter.css" rel="stylesheet" />
<!-- Bootstrap Datepicker JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<script src="~/assets/js/xlsx.full.min.js"></script>
<style>
    .tabs {
        width: 100%;
        max-width: 2500px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        overflow: hidden;
        padding: 0.7rem;
    }

    .modal-body {
        position: relative;
        -webkit-box-flex: 1;
        -ms-flex: 1 1 auto;
        flex: 1 1 auto;
        padding: var(--bs-modal-padding);
    }
    .stars span.active {
        color: gold;
    }
    #starRating span {
        font-size: 28px;
        cursor: pointer;
        color: #ccc; 
    }

    #starRating span.selected {
        color: gold;
    }

    .datepicker td, .datepicker th {
        border-radius: 20px !important;
    }

    .datepicker table tr td, .datepicker table tr td {
        padding: 8px 9px !important;
        height: 16px !important;
    }

    .datepicker table tfoot {
        display: none;
    }

    .active {
        background-color: #0ba4af;
        color: #fff;
    }

    .datepicker {
        top: 157.766px !important;
        left: 262px;
        z-index: 10;
        display: block;
    }
    th, td {
        border: 1px solid #2e6c7b;
        padding: 10px;
        text-align: center;
    }
    th {
        background-color: #0ba4af;
        color: white;
    }

    .stars span {
        font-size: 24px;
        cursor: pointer;
        color: #ccc;
    }
    .stars span.selected {
        color: gold; 
    }
</style>
<div class="container">
    <div class="mt-1" id="txtListpage">
        <div class="row">

            <div class="col-md-3 col-sm-3" id="txtSerch">
                <label for="txtSerch" class=" col-form-label-sm fw-bold"><span>Search</span></label>
                <input type="text" id="txtSerch" name="txtSerch" autocomplete="off" class="form-control form-control-sm box_border" maxlength="100" onkeydown="filterTickets(this.value)">
            </div>
            <div class="col-md-3 col-sm-3">
                <label for="txtReportType" class="col-form-label-sm fw-bold">Report Type</label>
                <select id="txtReportType" name="txtReportType" autocomplete="off"
                        class="form-control form-control-sm box_border">
                    <option value="P">Pending For Rating</option>
                    <option value="L">History Last 30 Days</option>
                    <option value="H">History Custom Days</option>
                </select>
            </div>
            <div class="col-md-3 col-sm-3" id="txtshowFromDate" style="display:none">
                <label for="txtFromDate" class="col-form-label-sm fw-bold">From Date</label>
                <input type="text" id="txtFromDate" name="txtFromDate" autocomplete="off" class="form-control form-control-sm box_border" placeholder="From Date.." maxlength="12">
            </div>
            <div class="col-md-3 col-sm-3" id="txtshowToDate" style="display:none">
                <label for="txtToDate" class="col-form-label-sm fw-bold">To Date</label>
                <input type="text" id="txtToDate" name="txtToDate" autocomplete="off" class="form-control form-control-sm box_border" placeholder="To Date.." maxlength="12">
            </div>

        </div>
        <div class="card-body mt-2" id="txtTable">
            <div class="table-wrapper fixed-height-table">
                <table id="table" class="fixed-width-table table">
                    <thead id="table-header">
                    </thead>
                    <tbody id="table-body">
                    </tbody>
                </table>
            </div>
            <!-- Paginator -->
            <div class="paginator" id="paginator-table">
            </div>
        </div>
        <!-- Button trigger modal -->
        <div class="modal position-absolute" id="staticBackdrop" style="padding-top:30px;" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-md">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="modal-header tab-header" style="background-color:#033764">
                            <level style="color:white">Edit</level>
                            <button type="button" class="close modal-close btn-sm" aria-label="Close" onclick="CloseModal()"><span aria-hidden="true">x</span></button>
                        </div>
                        <div class="row" style="margin-top:10px;">
                        </div>
                        <div class="row" style="margin-top:10px;">
                            <div class="col-md-12 fixed-width-table table" id="employeeRatingsContainer">
                                <!-- dynamic employees rating block will load here -->
                            </div>
                            <div class="col-md-2">
                                <button type="button" id="btnModelShow" class="btn btn-success btn-height" onclick="Ratingfunction()">
                                    Save
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/js/filter.js"></script>
<script src="~/assets/script/ticketsratingpending.js"></script>

