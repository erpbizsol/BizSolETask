@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
<link href="~/assets/css/filter.css" rel="stylesheet" />
<!-- Bootstrap Datepicker JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<script src="~/assets/js/xlsx.full.min.js"></script>
<script src="~/assets/script/timesheetmaster.js"></script>

<style>
    .datepicker td, .datepicker th {
        border-radius: 20px !important;
    }

    .datepicker table tr td, .datepicker table tr td {
        padding: 8px 9px !important;
        height: 16px !important;
    }

    .datepicker table tfoot {
        display: none;
    }

 

    .active {
        background-color: #0ba4af;
        color: #fff;
    }

    .datepicker {
        top: 157.766px !important;
        left: 262px;
        z-index: 10;
        display: block;
    }

    .tabs {
        width: 100%;
        max-width: 2000px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        overflow: hidden;
        padding: 0.7rem;
    }

    .tabs {
        width: 100%;
        max-width: 2000px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        overflow: hidden;
        padding: 0.7rem;
    }

    th, td {
        border: 1px solid #2e6c7b;
        padding: 10px;
        text-align: center;
    }

    th {
        background-color: #0ba4af;
        color: white;
    }

    tfoot td {
        background-color: #e6f2f5;
        font-weight: bold;
    }



    .summary-title {
        font-weight: bold;
        font-size: 18px;
        color: #004d66;
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

        .summary-title::before {
            content: "📋";
            margin-right: 7px;
        }

    .remarks-box {
        width: 100%;
        padding: 8px;
        margin-top: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

</style>
<div class="container">
    <div id="txtCreatepage">
        <div class="card shadow-sm">
            <div class="tabs">
                <div class="row p-2">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-3 col-sm-6">
                                <label for="ddlEmployeeName" class="col-form-label-sm fw-bold">Employee Name</label>
                                <select id="ddlEmployeeName" class="form-control form-control-sm box_border">
                                </select>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <label for="txtFromDate" class="col-form-label-sm fw-bold">Date</label>
                                <input type="text" id="txtFromDate" name="txtFromDate" autocomplete="off" class="form-control form-control-sm box_border" placeholder="From Date.." maxlength="50">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row p-2 " id="divOrderBooking mb-2">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-wrapper" style="overflow: auto;">
                            
                                <table id="tblorderbooking" class="table fixed-width-table">
                                    <thead role="rowgroup" class="text-sm-center">
                                        <tr role="row">
                                            <th class="lead-Date width_cust" role="columnheader">Department<span class="text-danger">*</span></th>
                                            <th class="lead-Date width_cust" role="columnheader">From Hr</th>
                                            <th class="lead-text width_cust" role="columnheader">To Hr</th>
                                            <th class="lead-text width_cust" role="columnheader">Time in Minutes</th>
                                            <th class="lead-text width_cust" role="columnheader">Work Type<span class="text-danger">*</span></th>
                                            <th class="lead-text width_cust" role="columnheader">Remarks</th>
                                            <th class="lead-text width_cust" role="columnheader">Action</th>
                                        </tr>
                                        <!-- end table row-->
                                    </thead>
                                    <tbody id="Orderdata" role="rowgroup"></tbody>
                                    <tfoot>
                                        <tr role="row" id="trAddBtn" style="font-weight:bold">
                                            <td colspan="3" class="text-right">TOTAL :</td>
                                            <td id="txtBillQtyBox" class="text-right">0.00</td>

                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <div class="paginator" id="paginator-table">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="p-2">
                    <label>Department Pending work remark</label>
                    <input class="remarks-box form-control-sm box_border" type="text">
                </div>
                <div class="summary-section p-2">
                    <div class="summary-title">Summary</div>
                    <div class="row">
                        <div class="col-sm-6">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Department</th>
                                        <th>Time (in Mins)</th>

                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <td>Total:</td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <div class="col-sm-6">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Work Type</th>
                                        <th>Time (in Mins)</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <td>Total:</td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

<script src="~/assets/js/filter.js"></script>
